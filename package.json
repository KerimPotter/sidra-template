{
	"name": "sidra-project",
	"version": "0.0.4",
	"description": "⚔️ SidraJS starter template.",
	"scripts": {
		"test": "mocha -r ts-node/register tests/*.test.ts",
		"prebuild": "rimraf dist",
		"build": "tsc",
		"lint": "eslint .",
		"format": "prettier --write .",
		"lint:watch": "onchange . -- eslint --fix {{changed}}",
		"format:watch": "onchange . -- prettier --write {{changed}}",
		"start": "node dist",
		"dev": "ts-node src",
		"dev:watch": "nodemon"
	},
	"license": "UNLICENSED",
	"devDependencies": {
		"@types/chai": "^4.2.12",
		"@types/express": "^4.17.9",
		"@types/mocha": "^8.0.2",
		"@types/node": "^14.0.27",
		"@typescript-eslint/eslint-plugin": "^3.9.0",
		"@typescript-eslint/parser": "^3.9.0",
		"chai": "^4.2.0",
		"chai-http": "^4.3.0",
		"eslint": "^7.7.0",
		"mocha": "^8.1.1",
		"nodemon": "^2.0.6",
		"onchange": "^7.1.0",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"express": "^4.17.1",
		"sidra": "^0.0.4"
	}
}
